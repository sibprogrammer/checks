!!!
%head
  %meta{ :charset => 'utf-8' }
  %title Checks
  %link{ :href => '/css/bootstrap.css', :rel => 'stylesheet' }
  %style{ :type => 'text/css' } body { padding-top: 60px; padding-bottom: 40px; }
%body
  %div{ :class => "navbar navbar-fixed-top" }
    %div{ :class => "navbar-inner" }
      %div{ :class => "container" }
        %a{ :class => "brand", :href => "#" } Checks

  %div{ :class => "container" }
    %table{ :class => "table table-striped table-bordered" }
      %tr
        %th Host
        %th State
      - @hosts.each do |host|
        %tr
          %td= host[:host]
          %td
            - if 'ok' == host[:status]
              %span{ :class => "label label-success" } OK
            - elsif 'fail' == host[:status]
              %span{ :class => "label label-important" } FAIL
            - else
              &nbsp;
